<%= form_for(@applicant) do |f| %>
  <% if @applicant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@applicant.errors.count, "error") %> prohibited this applicant from being saved:</h2>

      <ul>
      <% @applicant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :fname %><br>
    <%= f.text_field :fname %>
  </div>
  <div class="field">
    <%= f.label :lname %><br>
    <%= f.text_field :lname %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :gender %><br>
    <%= f.radio_button :gender, 0 %> Male<br />
    <%= f.radio_button :gender, 1 %> Female<br />

  </div>
  <div class="field">
    <%= f.label :dob %><br>
    <%= f.number_field :dob %>
  </div>
  <div class="field">
    <%= f.label :phone %><br>
    <%= f.number_field :phone %>
  </div>
  <div class="field">
    <%= f.label :married_status %><br>
    <%= f.number_field :married_status %>
  </div>
  <div class="field">
    <%= f.label :household_id %><br>
    <%= f.number_field :household_id %>
  </div>

  <div class="field">
    <%= f.label :church_id %><br>

    <% if @applicant.church.nil? %>
      <%= select_tag "applicant[church_id]", options_from_collection_for_select(Church.all, :id, :city) %>
    <% else %>
      <%= hidden_field_tag "applicant[church_id]", applicant.church_id %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :occupation %><br>
    <%= f.text_field :occupation %>
  </div>
  <div class="field">
    <%= f.label :occupation_status %><br>
    <%= f.number_field :occupation_status %>
  </div>
  <div class="field">
    <%= f.label :income %><br>
    <%= f.text_field :income %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
